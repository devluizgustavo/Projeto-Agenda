<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <!-- Mensagem descrevendo agenda -->
    <div class="col-lg-8 my-4">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça o seu login, ou crie sua conta abaixo</p>

      <%- include('includes/messages')%>

        <div class="col-md-7 mt-4" style="margin: 0 auto;">
          
          <h4>Acessar seu login</h4>
          <p>Se você já tem cadastro, faça seu login abaixo:</p>

          <form class="mt-2 form-login" action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group my-1">
              <label>Insira seu email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Insira seu senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Entrar</button>
            <a href="/cadastro/index" class="btn btn-primary my-3">Fazer cadastro</a>
          </form>
        </div>
      </div>

      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
